<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_CV_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/data_margin"
    android:layout_marginStart="@dimen/data_margin"
    android:layout_marginEnd="@dimen/data_margin"
    android:elevation="@dimen/data_default_elevation"
    app:cardCornerRadius="@dimen/default_corner_radius"
    app:cardElevation="@dimen/data_default_elevation"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_index"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/score_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textSize="@dimen/movie_title_size"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    tools:text="100"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/score_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="11sp"
                    android:gravity="center_horizontal|center_vertical"
                    tools:text="2025-01-01" />
            </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>